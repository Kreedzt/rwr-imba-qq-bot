{
    "name": "rwr-imba-qq-bot",
    "version": "0.2.5",
    "description": "适用于 RWR 服务器数据查询的 QQ 机器人",
    "type": "module",
    "main": "index.js",
    "repository": {
        "url": "https://github.com/Kreedzt/rwr-imba-qq-bot.git",
        "type": "git"
    },
    "homepage": "https://github.com/Kreedzt/rwr-imba-qq-bot/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/Kreedzt/rwr-imba-qq-bot/issues"
    },
    "scripts": {
        "start": "node postbuild.cjs && node startDev.cjs",
        "build": "node postbuild.cjs && rollup --environment NODE_ENV:production,BUILD:production --config rollup.config.cjs",
        "test": "vitest",
        "test:image": "RUN_IMAGE_TESTS=1 vitest -- src/services/imageRegression/imageRegression.test.ts",
        "test:watch": "vitest --watch",
        "coverage": "vitest --coverage"
    },
    "engines": {
        "node": ">=22.11.0",
        "npm": ">=10.9.0"
    },
    "keywords": [
        "qq",
        "bot",
        "self-hosted",
        "go-cqhttp",
        "rwr",
        "Running with rifles"
    ],
    "author": "Kreedzt",
    "license": "MIT",
    "dependencies": {
        "@clickhouse/client": "^1.16.0",
        "@fastify/static": "^9.0.0",
        "@resvg/resvg-js": "^2.6.2",
        "axios": "1.13.3",
        "cron": "^4.4.0",
        "dayjs": "^1.11.19",
        "dotenv": "^17.2.3",
        "echarts": "^6.0.0",
        "fast-xml-parser": "^5.3.3",
        "fastify": "^5.7.2",
        "jsonwebtoken": "^9.0.3",
        "lodash": "^4.17.23",
        "pg": "^8.17.2",
