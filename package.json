        "@types/pg": "^8.16.0",
        "@vitest/coverage-istanbul": "^4.0.18",
        "@vitest/ui": "^4.0.18",
        "chalk": "^4.1.2",
        "depcheck": "^1.4.7",
        "prettier": "^3.8.1",
        "rollup": "^4.57.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-node": "^7.0.0",
        "vitest": "^4.0.18",
        "vitest-sonar-reporter": "^3.0.0"
