{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "module": "ES6",
        "lib": [
            "es2020",
            "es2021",
            "dom"
        ],
        "strict": true,
        "rootDir": "./src"
    },
    "include": [
        "vitest/globals",
        "./types/*.d.ts",
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
