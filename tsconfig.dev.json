{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "strict": true,
    "rootDir": "./src"
  },
  "include": ["vitest/globals","./types/*.d.ts", "src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
